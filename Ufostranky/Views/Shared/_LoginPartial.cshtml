@using Microsoft.AspNet.Identity

<div class="login">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <span>
                Jste přihlášen jako: @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, 
                    htmlAttributes: new { title = "Manage", @class = "authLink" })
            </span>
            <span><a href="javascript:document.getElementById('logoutForm').submit()" class="authLink">Log off</a></span>
        }
    }
    else
    {
        <span>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "authLink" })</span>
        <span>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "authLink" })</span>
    }
</div>
